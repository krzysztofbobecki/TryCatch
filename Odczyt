import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Odczyt {
    public static void main(String[] args) throws IOException {
        int[] tab = {1,2,3,4,5};
        BufferedReader odczyt = new BufferedReader(new InputStreamReader(System.in));
        int index = -1;

        System.out.println("Który element tablicy chcesz zobaczyć: ");
        boolean czyPoprawne = false;

        while(!czyPoprawne) {
            try {
                index = Integer.parseInt(odczyt.readLine());
            }catch (IOException e) {
                System.out.println("Niepoprawne dane!"+"\n Który elemnt tablicy chcesz zobaczyć: ");
            }catch (NumberFormatException e){
                System.out.println("Niepoprawne dane!"+"\n Który elemnt tablicy chcesz zobaczyć: ");
            }
           czyPoprawne = index == -1? false : true;
        }

        try {
            System.out.println("Wybrany element tablicy to: "+tab[index]);
        }catch (ArrayIndexOutOfBoundsException e){
            System.out.println("Niepoprawny parametr, roazmiar tablicy to: "+tab.length);
        }
    }
}
